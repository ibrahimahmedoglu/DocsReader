@page
@model DocsReader.Pages.DocsreaderPages.LoginModel

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="admin.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="admin.Username"></label>
            </div>
            <div class="col-6">
                <input class="form-control" placeholder="Username"  asp-for="admin.Username"/>
            </div>
            <span asp-validation-for="admin.Username" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="admin.Password"></label>
            </div>
            <div class="col-6">
                <input class="form-control" type="password" placeholder="Password" asp-for="admin.Password" />
            </div>
            <span asp-validation-for="admin.Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Log in" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

